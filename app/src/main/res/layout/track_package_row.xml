<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundListColor">

    <RelativeLayout
            android:id="@+id/status_image_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/padding_margin_large"
            android:layout_marginTop="@dimen/padding_margin_large"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:id="@+id/status_image_view"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"/>

    </RelativeLayout>

    <TextView
            android:id="@+id/no_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_margin_large"
            android:layout_marginTop="@dimen/padding_margin"
            android:text="EH123456789TH"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/noTextColor"
            app:layout_constraintLeft_toRightOf="@id/status_image_layout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/company_text_view"/>

    <TextView
            android:id="@+id/company_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_margin_extra_small"
            android:text="Thailand Post"
            app:layout_constraintLeft_toLeftOf="@id/no_text_view"
            app:layout_constraintTop_toBottomOf="@id/no_text_view"
            app:layout_constraintBottom_toTopOf="@id/description_text_view"/>

    <TextView
            android:id="@+id/description_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_margin_extra_small"
            android:layout_marginBottom="@dimen/padding_margin"
            android:text="นำจ่ายสำเร็จ"
            android:textSize="@dimen/text_size"
            app:layout_constraintLeft_toLeftOf="@id/no_text_view"
            app:layout_constraintTop_toBottomOf="@id/company_text_view"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:id="@+id/menu_image_view"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="@dimen/padding_margin"
            android:layout_marginEnd="@dimen/padding_margin"
            android:src="@drawable/ic_more_vert_gray_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>